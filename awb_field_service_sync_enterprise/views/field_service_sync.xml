<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Field Service Sync Config Form View -->
	<record id="field_service_sync_config_form_view" model="ir.ui.view">
		<field name="name">field.service.sync.form.view</field>
		<field name="model">field.service.sync</field>
		<field name="arch" type="xml">
			<form string="Field Service Sync Config Form View">
				<header>
					<button name="connect"  type="object" string="Connect"
						class="oe_highlight" attrs="{'invisible': [('state', '=', 'connected')]}" />
					<button name="disconnect"  type="object" string="Disonnect"
						class="oe_highlight" attrs="{'invisible': [('state', '=', 'draft')]}" />
					<field name="state" widget="statusbar" />
				</header>
				<div class="oe_title">
					<label for="name" class="oe_edit_only"/>
					<h1>
						<field name="name"/>
					</h1>
				</div>
				<group>
					<group>
						<field name="hostname"/>
						<field name="database" />
						<field name="username"/>
						<field name="password" password="True"/>
						<field name="auto_sync"/>
						<field name="project_id"/>
						<field name="error_message" attrs="{'invisble': [('error_message', '=', '')]}" />
					</group>

				</group>
			</form>
		</field>
	</record>

	<!-- Field Service Sync Config List View -->
	<record id="field_service_sync_config_list_view" model="ir.ui.view">
		<field name="name">field.service.sync.list.view</field>
		<field name="model">field.service.sync</field>
		<field name="arch" type="xml">
			<tree string="Field Service Sync Config List View">
				<field name="name"/>
				<field name="hostname"/>
				<field name="auto_sync"/>
			</tree>
		</field>
	</record>

	<!-- Field Service Sync Config Action -->
	<record id="field_service_sync_config_settings_action" model="ir.actions.act_window">
		<field name="name">Field Service Sync</field>
		<field name="res_model">field.service.sync</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{}</field>
		<field name="domain">[]</field>
		<field name="view_id" ref="field_service_sync_config_list_view"/>
	</record>



	<menuitem id="field_service_config_settings_menu" name="Sync Settings"
            parent="industry_fsm.fsm_menu_settings"
            groups="industry_fsm.group_fsm_manager"  sequence="0" action="field_service_sync_config_settings_action"
           />
		
</odoo>